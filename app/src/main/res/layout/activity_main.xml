<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="it.ngallazzi.fancyswitchsample.MainActivity">

    <it.ngallazzi.fancyswitch.FancySwitch
            android:id="@+id/fsHdr"
            android:layout_height="110dp"
            android:layout_width="wrap_content"
            app:orientation="PORTRAIT"
            app:actionOffDrawable="@drawable/ic_hdr_off"
            app:actionOnDrawable="@drawable/ic_hdr_on"
            app:baseColor="@android:color/holo_blue_dark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fsSmile"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

    <it.ngallazzi.fancyswitch.FancySwitch
            android:id="@+id/fsSmile"
            android:layout_height="140dp"
            android:layout_width="wrap_content"
            app:orientation="PORTRAIT"
            app:actionOffDrawable="@drawable/ic_mood_bad"
            app:actionOnDrawable="@drawable/ic_mood_happy"
            app:baseColor="@android:color/holo_blue_bright"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fsLock"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/fsHdr" />

    <it.ngallazzi.fancyswitch.FancySwitch
            android:id="@+id/fsBlur"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:orientation="LANDSCAPE"
            app:actionOffDrawable="@drawable/ic_blur_on"
            app:actionOnDrawable="@drawable/ic_blur_off"
            app:baseColor="@android:color/holo_blue_light"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/fsEye" />

    <it.ngallazzi.fancyswitch.FancySwitch
            android:id="@+id/fsLock"
            android:layout_height="160dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/fsSmile" />

    <it.ngallazzi.fancyswitch.FancySwitch
            android:id="@+id/fsCamera"
            android:layout_height="79dp"
            android:layout_width="0dp"
            app:orientation="LANDSCAPE"
            app:actionOffDrawable="@drawable/ic_camera_front"
            app:actionOnDrawable="@drawable/ic_camera_rear"
            app:baseColor="@android:color/holo_orange_dark"
            app:layout_constraintStart_toEndOf="@+id/fsEye"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/fsEye"
            app:layout_constraintBottom_toBottomOf="@+id/fsEye"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

    <it.ngallazzi.fancyswitch.FancySwitch
            android:id="@+id/fsEye"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:orientation="LANDSCAPE"
            app:actionOffDrawable="@drawable/ic_visibility_off"
            app:actionOnDrawable="@drawable/ic_visibility_on"
            app:baseColor="@android:color/holo_purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/fsCamera"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/fsLock" />

    <it.ngallazzi.fancyswitch.FancySwitch
            android:id="@+id/fsAlarmClock"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:orientation="LANDSCAPE"
            app:actionOffDrawable="@drawable/ic_alarm_off"
            app:actionOnDrawable="@drawable/ic_alarm_on"
            app:baseColor="@android:color/holo_red_dark"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/fsBlur"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:id="@+id/btChangeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to scrolling layout"
            app:layout_constraintStart_toStartOf="@+id/fsAlarmClock"
            app:layout_constraintEnd_toEndOf="@+id/fsAlarmClock"
            app:layout_constraintTop_toBottomOf="@+id/fsAlarmClock"
            android:layout_marginTop="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>